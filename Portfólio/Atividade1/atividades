exemplo4.html : Altera valor de um elemento


<html><body>

	<script>
    function muda(){
    	document.getElementById("palavra").innerHTML = "LIGADO";
    }
    </script>
    <p id="palavra">DESLIGADO</div>
    <button onclick="muda()">Ligar</button>
	
</html></body>


exemplo5.html

<html><body>
	<script>
	function muda(){
	var x = document.getElementById("entrada").value;
	document.getElementById("copia").value = x;
	}
	</script>
	Entrada: <input id="entrada" type="text" onchange="muda()" />
	<br/>
	C칩pia: <input id="copia" type="text"/>
	</body></html>
	
	}
